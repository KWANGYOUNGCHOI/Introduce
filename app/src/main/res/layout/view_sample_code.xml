<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimen.size80"
        android:layout_height="@dimen/dimen.size8"
        app:cardBackgroundColor="@color/yellow_pastel"
        android:layout_margin="@dimen/dimen.size4"
        app:cardCornerRadius="@dimen/dimen.size4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen.size4"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dimen.size32"
            android:layout_height="@dimen/dimen.size8"
            app:cardBackgroundColor="@color/red_pastel"
            app:cardCornerRadius="@dimen/dimen.size4" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dimen.size32"
            android:layout_height="@dimen/dimen.size8"
            app:cardBackgroundColor="@color/green_pastel"
            app:cardCornerRadius="@dimen/dimen.size4"
            android:layout_marginStart="@dimen/dimen.size4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen.size4"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dimen.size16"
            android:layout_height="@dimen/dimen.size8"
            app:cardBackgroundColor="@color/green_pastel"
            app:cardCornerRadius="@dimen/dimen.size4" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dimen.size64"
            android:layout_height="@dimen/dimen.size8"
            app:cardBackgroundColor="@color/yellow_pastel"
            app:cardCornerRadius="@dimen/dimen.size4"
            android:layout_marginStart="@dimen/dimen.size4"/>

    </LinearLayout>

</LinearLayout>
