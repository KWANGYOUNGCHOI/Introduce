<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen.size8"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/main.fab.external"
        android:src="@drawable/ic_tistory"
        android:tag="@string/external.blog.url"
        android:theme="@style/Kwang0.Theme.fabComponent"
        android:tint="@color/black"
        android:visibility="invisible"
        app:fabSize="mini"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabGithub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen.size8"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/main.fab.external"
        android:src="@drawable/ic_github"
        android:tag="@string/external.github.url"
        android:theme="@style/Kwang0.Theme.fabComponent"
        android:tint="@color/black"
        android:visibility="invisible"
        app:fabSize="mini"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPlayStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen.size8"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/main.fab.external"
        android:src="@drawable/ic_play_store"
        android:tag="@string/external.play.store.url"
        android:theme="@style/Kwang0.Theme.fabComponent"
        android:visibility="invisible"
        app:fabSize="mini"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen.size16"
        android:backgroundTint="@color/orange_800"
        android:contentDescription="@string/main.fab.external"
        android:src="@drawable/ic_add"
        android:theme="@style/Kwang0.Theme.fabComponent"
        android:tint="@color/orange_50"
        app:fabSize="mini" />

</LinearLayout>
